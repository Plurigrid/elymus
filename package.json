{
  "name": "elymus",
  "version": "0.1.1",
  "description": "Censorship resistance at highest level",
  "main": "main.js",
  "repository": "https://github.com/angrymouse/elymus",
  "author": "Angrymouse <nik@hns.is>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "electron": "^20.0.3",
    "electron-builder": "^23.3.3"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "postinstall": "electron-builder install-app-deps",
    "app:dist": "electron-builder"
  },
  "dependencies": {
    "@electron-forge/maker-wix": "^6.0.0-beta.65",
    "@reforged/maker-appimage": "^1.2.1",
    "bns": "^0.15.0",
    "bs58": "^5.0.0",
    "cids": "^1.1.9",
    "daisyui": "^2.24.0",
    "electron-serve": "^1.1.0",
    "electron-store": "^8.1.0",
    "fastify": "^4.5.2",
    "ipfs-core": "^0.15.4",
    "mime": "^3.0.0",
    "multiformats": "^9.7.1",
    "undici": "^5.9.1",
    "yauzl": "^2.10.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "ignore": [
          "^\\/src$",
          "^\\/out$"
        ],
        "icon": "build/icon.ico",
        "name": "Elymus"
      },
      "makers": [
        {
          "name": "@reforged/maker-appimage",
          "config": {
            "options": {
              "name": "Elymus",
              "productName": "Elymus",
              "genericName": "Elymus",
              "icon": "./src/assets/logo-01.png",
              "categories": [
                "Utility"
              ],
              "AppImageKitRelease": 12
            }
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "elymus",
            "setupIcon": "icon.ico",
            "iconUrl": "https://raw.githubusercontent.com/angrymouse/elymus/master/logo.ico",
            "title": "Elymus",
            "appDirectory": ".",
            "outputDirectory": "out",
            "authors": [
              "Angrymouse <nik@hns.is>"
            ]
          }
        }
      ]
    }
  },
  "build": {
    "productName": "Elymus",
    "copyright": "Angrymouse",
    "appId": "dweb.elymus.repens",
    "mac": {
      "category": "utility"
    }
  }
}
